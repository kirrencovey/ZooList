@model Capstone.Models.TripItem

@{
    ViewData["Title"] = "Delete";
}

    <div class="card-container">
        <div class="card delete-card">
            <div class="card-body">
                <p class="delete-card-title">Wait!</p>
                <p class="delete-card-text">Are you sure you want to remove @Html.DisplayFor(model => model.Zoo.Name) from @Html.DisplayFor(model => model.Trip.Name)?</p>
                <div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TripItemId" />
                        <input type="submit" value="Delete" class="btn btn-outline-info" />
                        <a asp-action="Index" asp-controller="Trips" class="btn btn-outline-info">Back to Trips</a>
                    </form>
                </div>
            </div>
        </div>
    </div>