@model Capstone.Models.TripItem

@{
    ViewData["Title"] = "Create";
}

<div class="card-container">
    <div class="card delete-card">
        <div class="card-body">
            <p class="delete-card-title">Add to Trip</p>
            <p class="delete-card-text">Which trip would you like to add @ViewBag.Zoo.Name to?</p>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TripId" class="control-label">Choose a Trip</label>
                    <select asp-for="TripId" class="form-control" asp-items="ViewBag.TripId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-outline-info" />
                    <a href='javascript:history.go(-1)'>Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
