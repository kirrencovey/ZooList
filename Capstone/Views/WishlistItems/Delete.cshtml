@model Capstone.Models.WishlistItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Wait!</h1>

<h3>Are you sure you want to remove 
    <br/>
    @Html.DisplayFor(model => model.Zoo.Name) from your wishlist?
</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="WishlistItemId" />
        <input type="submit" value="Delete" class="btn btn-light" />
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>
