@model Capstone.Models.Trip

@{
    ViewData["Title"] = "Create";
}


<div class="card-container">
    <div class="card delete-card">
        <div class="card-body">
            <p class="delete-card-title">Add A Trip</p>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Trip Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-info" />
                    <a class="btn btn-outline-info" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
